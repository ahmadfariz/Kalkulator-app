<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".AboutActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/t1"
            android:layout_marginTop="250dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="Tentang Apliaksi"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:text="dibuat oleh Ahmad Fariz Dwi Putra"/>

        <RelativeLayout
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/bimg1"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/transparent"
                android:onClick="git"
                android:src="@drawable/git2"/>

            <ImageButton
                android:id="@+id/bimg2"
                android:layout_marginLeft="125dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/transparent"
                android:onClick="fb"
                android:src="@drawable/facebook"/>

            <ImageButton
                android:id="@+id/bimg4"
                android:layout_marginRight="25dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/transparent"
                android:onClick="steam"
                android:src="@drawable/steam"/>

            <ImageButton
                android:id="@+id/bimg3"
                android:layout_marginRight="125dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/transparent"
                android:onClick="ig"
                android:src="@drawable/instagram"/>

        </RelativeLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Beliin saya kopi dong biar ngoding makin lancar"/>

        <Button
            android:id="@+id/donate"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sawer"
            android:text="Donate"/>

    </LinearLayout>

</LinearLayout>